# Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@localhost:5432/store?schema=public"

# ============================================
# JWT CONFIGURATION
# ============================================
# Secret key for JWT token signing
# Generate a secure random string (recommended: at least 32 characters)
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your_secure_jwt_secret_key_here"

# ============================================
# SERVER CONFIGURATION
# ============================================
# Port on which the server will run
PORT=5000

# Server URL (used for callbacks and webhooks)
SERVER_URL="http://localhost:5000"

# Server domain (used for cookies)
SERVER_DOMAIN="localhost"

# Client URL (used for CORS and redirects)
CLIENT_URL="http://localhost:3000"

# ============================================
# GOOGLE OAUTH 2.0 CONFIGURATION
# ============================================
# Get credentials from: https://console.cloud.google.com/
# 1. Create a new project or select existing
# 2. Enable Google+ API
# 3. Create OAuth 2.0 credentials
# 4. Add authorized redirect URIs: http://localhost:5000/auth/google/callback

GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
GOOGLE_CALLBACK_URL="http://localhost:5000/auth/google/callback"

# ============================================
# STRIPE PAYMENT CONFIGURATION
# ============================================
# Get credentials from: https://dashboard.stripe.com/test/apikeys
# Use test keys for development (they start with sk_test_)

# Secret key for Stripe API
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"

# Webhook secret for Stripe webhooks
# Get this from Stripe CLI or Stripe Dashboard webhooks section
# To use Stripe CLI: stripe listen --forward-to localhost:5000/webhook
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"
